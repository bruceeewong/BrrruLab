.main {
  padding: 40rpx;
}
.hero {
  padding: 40rpx 60rpx;
}
.hero__title, .hero__subtitle {
  display: block;
}
.hero__title {
  font-size: 1.5em;
  color: #343a40;
}
.hero__subtitle {
  color: #6c757d;
}
.project {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.project__info {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.info__img {
  width: 60rpx;
  height: 60rpx;
}
.info__title {
  margin-left: 20rpx;
  font-size: 1.2em;
}
.goto {
  width: 60rpx;
  height: 60rpx;
}
.footer {
  position: fixed;
  width: 100%;
  bottom: 0;
}